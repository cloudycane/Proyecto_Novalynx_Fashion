@using NovalynxFashion.Core.Entidades.DTO
@model LoginDTO

@{

}


<div class="form-containter" style="margin-top: 8%;">
    Todavía no estás registrado? <a asp-action="Registrar" asp-controller="Cuenta" class="link-hover">Regístrate</a>
    <h2 class="text-large">Iniciar Sesión</h2>
    <div>
        @if (ViewBag.Errors != null)
        {
            <div class="text-danger">
                <ul>
                    @foreach (string error in ViewBag.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
    </div>
    <center>
        <form asp-controller="Cuenta" asp-action="IniciarSesion" method="post">

            <div class="col-lg-4">
                <label asp-for="Email">Correo Electrónico</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="col-lg-4">
                <label asp-for="Password">Contraseña</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="col-lg-4">
                <button class="btn btn-primary" type="submit" style="margin-top: 2%;">Iniciar Sesión</button>
            </div>

        </form>
    </center>
</div>

