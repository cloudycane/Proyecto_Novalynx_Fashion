@model SuministradorModel

<div class="container">

	<h1 class="text-center">Crear Suministrador</h1>
	<hr />
	
	<div class="container">
		<form asp-action="Crear" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly"></div>

			<div class="col-lg-4">
				<label>Subir Imagen</label>
				<center>
					<img class="img-circle" id="preview" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="Imagen previa" width="70" height="70">
				</center>
				<input type="file" name="imagen" id="imagen" accept="image/jpeg,image/png" />
			</div>
	

			<div class="col-lg-4">
				<label asp-for="NombreSuministrador"></label>
				<input asp-for=NombreSuministrador class="form-control" />
				<span asp-validation-for="NombreSuministrador" class="text-danger"></span>
			</div>

			<div class="col-lg-4">
				<label asp-for="CorreoElectronico"></label>
				<input asp-for=CorreoElectronico class="form-control" />
				<span asp-validation-for="CorreoElectronico" class="text-danger"></span>
			</div>

			<div class="col-lg-4">
				<label asp-for="Telefono"></label>
				<input asp-for="Telefono" class="form-control" />
				<span asp-validation-for="Telefono" class="text-danger"></span>
			</div>

			<div class="col-lg-4">
				<label asp-for="Direccion"></label>
				<input asp-for="Direccion" class="form-control" />
				<span asp-validation-for="Direccion" class="text-danger"></span>
			</div>
			
			<div class="col-lg-8" style="float: right;">
				<button class="btn btn-primary" type="submit" style="margin-top: 5%;">Enviar</button>
			</div>

		</form>
		
		
	</div>
	
</div>

@{

	<script src="~/js/previsualizarImagen.js" type="text/javascript"></script>
	<script>
		document.getElementById('imagen').addEventListener('change', function (event) {
					const [file] = event.target.files;
					if (file) {
						document.getElementById('preview').src = URL.createObjectURL(file);
					}
				});
	</script>

}